{
    "general": {
        "development": true
    },

    "database_connections": {
            "development":  {
                "driver": "sqlite",
                "query": "default_db.sqlite"
            },
            "default": {
                "driver": "pgsql",
                "query": "root:example@localhost/Gishiki"
            }, 
            "secure": {
                "driver": "mysql",
                "query": "root:example@localhost/Gishiki",
                "ssl_key": "/var/www/client-key.pem",
                "ssl_cert": "/var/www/client-cert.pem",
                "ssl_ca": "/var/www/ca-cert.pem"
            }
    },

    "cache": {
        "enabled": false,
        "server": "memcached://localhost:11211"
    },
    
    "SECURITY":"SETTINGS_HERE!"
    
}